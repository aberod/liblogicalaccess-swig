                <include>*.dll</include>
            </includes>
			<!--<excludes>
				<exclude>Interop.*.dll</exclude>
			</excludes>-->
        </fileSet>		
		<fileSet>
            <directory>/include</directory>
            <outputDirectory>/include/polluxcards</outputDirectory>
