            <directory>/vc++</directory>
            <outputDirectory>/include/polluxcards</outputDirectory>
            <includes>
                <include>*.h</include>
				<include>*.idl</include>
            </includes>
            <excludes>
				<exclude>/.svn/*</exclude>
