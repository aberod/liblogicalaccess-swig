<assembly>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>/vc++/polluxcards/Release/Win32</directory>
            <outputDirectory>/lib/Win32/</outputDirectory>
            <includes>
                <include>*.pdb</include>
				<include>*.lib</include>
            </includes>
            <excludes>
				<exclude>vc100.pdb</exclude>
            </excludes>
        </fileSet>
